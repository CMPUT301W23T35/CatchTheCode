<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/map"
        android:layout_width="128dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="MAP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout_main" />

    <Button
        android:id="@+id/friend"
        android:layout_width="128dp"
        android:layout_height="57dp"
        android:layout_marginEnd="32dp"
        android:text="FRIEND"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/defalt_image"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <Button
        android:id="@+id/swit"
        android:layout_width="128dp"
        android:layout_height="57dp"
        android:layout_marginEnd="32dp"
        android:text="SWIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/profile"
        app:layout_constraintTop_toBottomOf="@+id/friend" />
    <Button
        android:id="@+id/Scoreboard"
        android:layout_width="128dp"
        android:layout_height="57dp"
        android:layout_marginEnd="32dp"
        android:text="Board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/profile"
        app:layout_constraintTop_toBottomOf="@+id/swit" />

    <Button
        android:id="@+id/scan"
        android:layout_width="225dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="scan_qr_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ranking"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/logout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profile"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:text="my_profile"
        app:layout_constraintBottom_toTopOf="@+id/collection"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/collection"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="388dp"
        android:text="collection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />



    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:text="rank_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ranking"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/defalt_image"
        android:layout_width="154dp"
        android:layout_height="152dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/icon"
        app:layout_constraintBottom_toTopOf="@+id/profile"
        app:layout_constraintEnd_toStartOf="@+id/map"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/mascot"
        android:layout_width="165dp"
        android:layout_height="242dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/dynamic"
        app:layout_constraintBottom_toTopOf="@+id/scan"
        app:layout_constraintEnd_toStartOf="@+id/ranking"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collection"
        app:layout_constraintVertical_bias="0.677"
        app:srcCompat="@android:mipmap/sym_def_app_icon"
        tools:ignore="ImageContrastCheck" />

    <View
        android:id="@+id/divider_main"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <Button
        android:id="@+id/title"
        android:layout_width="173dp"
        android:layout_height="51dp"
        android:text="catchthecode"
        app:layout_constraintEnd_toStartOf="@+id/logout_main"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>