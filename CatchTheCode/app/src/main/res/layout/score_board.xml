<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Text"
        app:layout_constraintStart_toEndOf="@id/gold_icon"
        app:layout_constraintTop_toTopOf="@id/gold_icon"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/gold_icon" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Text"
        app:layout_constraintStart_toEndOf="@id/silver_icon"
        app:layout_constraintTop_toTopOf="@id/silver_icon"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/silver_icon" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Text"
        app:layout_constraintStart_toEndOf="@id/bronze_icon"
        app:layout_constraintTop_toTopOf="@id/bronze_icon"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/bronze_icon" />


    <ImageView
        android:id="@+id/gold_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/gold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/silver_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/silver"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/gold_icon"/>

    <ImageView
        android:id="@+id/bronze_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/bronze"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/silver_icon"
        android:layout_marginTop="20dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>